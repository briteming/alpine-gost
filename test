
FROM alpine

MAINTAINER mixool0204@gmail.com

RUN apk upgrade --update \
    && apk add --update --virtual=.build-dependencies curl ca-certificates bashã€€\
    && GLIBC_VERSION="2.25-r0" \
    && for pkg in glibc-${GLIBC_VERSION} glibc-bin-${GLIBC_VERSION} glibc-i18n-${GLIBC_VERSION}; do curl -sSL https://github.com/andyshinn/alpine-pkg-glibc/releases/download/${GLIBC_VERSION}/${pkg}.apk -o /tmp/${pkg}.apk; done \
    && apk add --allow-untrusted /tmp/*.apk && \
    && curl -sSL https://github.com/ginuerzh/gost/releases/download/v2.4-dev/gost_2.4-dev20170303_linux_amd64.tar.gz \
    && tar -xzf gost_2.4-dev20170303_linux_amd64.tar.gz \
    && mv gost_2.4-dev20170303_linux_amd64/gost /root/ \
    && /usr/glibc-compat/bin/localedef --force --inputfile POSIX --charmap UTF-8 C.UTF-8 || true \
    && echo "export LANG=C.UTF-8" > /etc/profile.d/locale.sh\
    && apk del .build-dependencies glibc-i18n \
    && rm -rf   /tmp/*.apk /root/gost_2.4-dev20170303_linux_amd64.tar.gz /var/cache/apk/*
    
ENTRYPOINT ["/root/gost"]
